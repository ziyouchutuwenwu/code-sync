{
  // files
  "files.autoSave": "afterDelay",
  "files.autoGuessEncoding": true,

  // editor
  "editor.fontFamily": "Monaco",
  "editor.fontSize": 13,
  "editor.minimap.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.suggestSelection": "first",
  "editor.linkedEditing": true,
  "editor.tabSize": 2,
  "editor.renderWhitespace": "none",
  "editor.copyWithSyntaxHighlighting": false,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.unicodeHighlight.invisibleCharacters": false,

  // window
  "window.restoreWindows": "none",
  "window.menuBarVisibility": "classic",
  "window.newWindowDimensions": "inherit",
  "window.openFilesInNewWindow": "default",
  "update.showReleaseNotes": false,

  // workbench
  "workbench.colorTheme": "Yi Dark",
  "workbench.iconTheme": "vscode-icons",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.enableExperiments": false,
  "workbench.editor.empty.hint": "hidden",
  "workbench.localHistory.enabled": false,
  "workbench.settings.showAISearchToggle": true,

  // git
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "always",

  // explorer
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.confirmPasteNative": false,

  // debug
  "debug.console.fontFamily": "Monaco",
  "debug.console.fontSize": 13,
  "debug.onTaskErrors": "showErrors",

  // terminal
  "terminal.integrated.fontFamily": "Monaco",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.inheritEnv": true,
  "terminal.integrated.enableMultiLinePasteWarning": "never",

  // task
  "task.quickOpen.history": 0,
  "task.autoDetect": "off",

  // formatter
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.printWidth": 120,
  "prettier.htmlWhitespaceSensitivity": "ignore",
  "prettier.bracketSameLine": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "window.customTitleBarVisibility": "never",
  "window.titleBarStyle": "native",
  "window.controlsStyle": "native",
  "window.dialogStyle": "native",

  // chat
  "chat.disableAIFeatures": true,
  "chat.editor.fontFamily": "Monaco",
  "chat.editor.fontSize": 13,

  // extra
  "breadcrumbs.enabled": true,
  "vsicons.dontShowNewVersionMessage": true,
  "redhat.telemetry.enabled": false,
  "extensions.ignoreRecommendations": true,
  "search.quickOpen.includeHistory": false,
  "security.workspace.trust.enabled": false,

  // --------------------------------------------------------------------
  // markdown
  "markdown.preview.fontFamily": "Monaco",
  "markdown.preview.fontSize": 13,
  "markdown-preview-enhanced.scrollSync": true,
  "markdown-preview-enhanced.enablePreviewZenMode": false,

  // html
  "html.format.wrapLineLength": 0,
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.donotShowInfoMsg": true,

  // ts
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",

  "files.associations": {
    "*.heex": "html"
  },

  // elixir
  "[elixir]": {
    "editor.defaultFormatter": "JakeBecker.elixir-ls"
  },

  // mkdir -p ~/.config/rebar3
  // echo -e "{plugins, [erlfmt]}." > ~/.config/rebar3/rebar.config
  "[erlang]": {
    "editor.defaultFormatter": "szTheory.erlang-formatter"
  },
  "erlangFormatter.formatter": "erlfmt",

  // rust
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  }
}
